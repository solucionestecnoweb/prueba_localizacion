                   t-att-data-target="'#product_view'+str(product.id)">
                    <i class="fa fa-eye"></i>
                </a>
            </t>
        </xpath>
    </template>-->
    
    <template id="products_item_ribbon_slider" inherit_id="negocio_shop.product_item">
        <xpath expr="//div[hasclass('pro-action')]"
               position="inside">
            <span t-if="product.ribbon_title" class="hot-sale">
                <t t-esc="product.ribbon_title"/>
            </span>
        </xpath>
    </template>
	 <template id="product_view_extended" inherit_id="negocio_shop.product_view">
        <xpath expr="//div[hasclass('product-title')]"
               position="after">
            <t t-foreach="objects" t-as="obj">
                <t t-foreach="obj" t-as="product">
                    <div class="modal fade product_view" t-att-id="'product_view'+str(product.id)">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <a href="#" data-dismiss="modal" class="class pull-right">
                                        <span class="fa fa-close"></span>
                                    </a>
                                    <h3 class="modal-title">
                                        <span t-field="product.name"/>
                                    </h3>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6 product_img">
                                            <span itemprop="image" t-field="product.image_256"
                                                  t-options='{"widget": "image", "resize": None if product_image_big else "300x300"}'
                                                  t-att-alt="product.name"/>

                                        </div>
                                        <div class="col-md-6 product_content">
                                            <div class="col-sm-12 col-lg-12" id="product_details">
                                                <h3 itemprop="name" t-field="product.name">Product Name</h3>
                                                <h4 t-if="product.default_code">SKU:
                                                    <span t-esc="product.default_code"></span>
                                                </h4>
                                                <div class="product-carousel-user-rating-quick">
                                                    <t t-name="website_rating.rating_stars_static">
                                                        <t t-set="val_integer"
                                                           t-value="round(review_rating_stat(product)['avg'])"/>
                                                        <t t-set="val_decimal" t-value="0"/>
                                                        <t t-set="empty_star" t-value="5 - val_integer"/>
                                                        <div class="o_website_rating_static">
                                                            <t t-foreach="range(0, val_integer)" t-as="num">
                                                                <i class="fa fa-star"/>
                                                            </t>
                                                            <t t-if="val_decimal">
                                                                <i class="fa fa-star-half-o"/>
                                                            </t>
                                                            <t t-foreach="range(0, empty_star)" t-as="num">
                                                                <i class="fa fa-star-o"/>
                                                            </t>
                                                        </div>
                                                    </t>
                                                </div>
                                                <span itemprop="url" style="display:none;"
                                                      t-esc="'/shop/product/%s' % slug(product)"/>
                                                <t t-if="(compute_currency(product.lst_price) - product.list_price ) &gt; 0.1  and website.get_current_pricelist().discount_policy=='without_discount'">
                                <del class="text-danger mr8"
                                     style="white-space: nowrap;"
                                     t-esc="compute_currency(product.website_public_price)"
                                     t-options="{'widget': 'monetary', 'display_currency': website.get_current_pricelist().currency_id, 'from_currency': website.currency_id}"/>
                            </t>

                            <span t-esc="product.list_price"
                                  t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                            <span itemprop="price" style="display:none;"
                                  t-esc="product.price"/>
                            <span itemprop="priceCurrency"
                                  style="display:none;"
                                  t-esc="website.currency_id.name"/>
                                                <a id="add_to_cart"
                                                   class="btn btn-primary btn-lg mt8 js_check_product a-submit"
                                                   t-att-href="'/shop/product/%s' % (slug(product))">Add to Cart
                                                </a>

                                                <hr t-if="product.description_sale"/>
                                                <div>
                                                    <p t-field="product.description_sale" class="text-muted"/>
                                                </div>
                                                <hr/>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
    
     <template id="snippet_product_slider_place" inherit_id="website.snippets">
	        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]" position="inside">
	            <t t-snippet="negocio_shop.snippet_product_slider"
	               t-thumbnail="/negocio_shop/static/src/img/product-slider-icon.png"/>
	        </xpath>
	   </template>	
    
     <!-- Snippet's Options -->
    <template id="slider_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='carousel']" position="after">
            <div data-js='slider_snippet_option' data-selector=".slider_snippet_option" />

            <div data-js='slider_snippet_option_modify' data-selector=".slider_snippet_option">            
                    <a tabindex="-1" class="dropdown-item modify_embeded" data-modify="" href="#">Modify</a>
            </div>            
        </xpath>
    </template>
    
    
</odoo>

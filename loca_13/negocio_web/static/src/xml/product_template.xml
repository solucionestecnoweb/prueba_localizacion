<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="comercio_web.product_slider_popup">
    <div class="modal" contentEditable="false" backdrop="false" tabindex="1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"  contenteditable="False" style="z-index:2001">
        <div class="modal-dialog">
            <div id="product_media_block_modal" class="modal-content">
                <div class="modal-body" contenteditable="false">
                    <div id="tab_html52">
                        <form class="form-horizontal container-fluid" role="form">
                          
						   <div class="row form-group">
                                <label for="productcollection" class="col-sm-5 control-label">Filter: </label>
                                <div class="col-sm-7">
                                	<select id="productcollection" class="form-control">
									
                                	</select>
                                </div>
                            </div>
                          
                          
                            <div class="row form-group">
                         
                                    <div class="col-sm-4">
                                        <label class="center-block">
                                           <div class="text-center head-box"><img class="img-responsive" src="/comercio_web/static/src/img/slider-type/1.jpg" alt="" /></div>
                                            <input name="slidertype" type="radio" value="style-1" />
                                        </label>
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="center-block">
                                           <div class="text-center head-box"><img class="img-responsive" src="/comercio_web/static/src/img/slider-type/2.jpg" alt="" /></div>
                                            <input name="slidertype" type="radio" value="style-2" />
                                        </label>
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="center-block">
                                           <div class="text-center head-box"><img class="img-responsive" src="/comercio_web/static/src/img/slider-type/3.jpg" alt="" /></div>
                                            <input name="slidertype" type="radio" value="style-3" />
                                        </label>
                                    </div>
                                       <div class="col-sm-4">
                                        <label class="center-block">
                                           <div class="text-center head-box"><img class="img-responsive" src="/comercio_web/static/src/img/slider-type/4.jpg" alt="" /></div>
                                            <input name="slidertype" type="radio" value="style-4" />
                                        </label>
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="center-block">
                                           <div class="text-center head-box"><img class="img-responsive" src="/comercio_web/static/src/img/slider-type/5.jpg" alt="" /></div>
                                            <input name="slidertype" type="radio" value="style-5" />
                                        </label>
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="center-block">
                                           <div class="text-center head-box"><img class="img-responsive" src="/comercio_web/static/src/img/slider-type/6.jpg" alt="" /></div>
                                            <input name="slidertype" type="radio" value="style-6" />
                                        </label>
                                    </div>
                                    <div class="col-sm-4">
                                        <label class="center-block">
                                           <div class="text-center head-box"><img class="img-responsive" src="/comercio_web/static/src/img/slider-type/7.jpg" alt="" /></div>
                                            <input name="slidertype" type="radio" value="style-7" />
                                        </label>
                                    </div>
                                
                            </div> 
                            <div class="d-none">
							<div class="col-sm-12 form-group">
                                <label for="ProductPerSlide" class="col-sm-5 control-label">Product per slide:</label>
                                
                                <div class="col-sm-7">
                                	<select id="ProductPerSlide" class="form-control">
										 <option value="4">4</option>
										  <option value="6">6</option>
										  <option value="8">8</option>
										  <option value="12">12</option>
                                	</select>
                                </div>
                               
                            </div>							
							 <div class="col-sm-12 form-group">
                                <label for="limit" class="col-sm-5 control-label">Total Product:</label>
                                <div class="col-sm-7">
                                	<input type='text'  id="limit" />
                                </div>
                            </div>
							 <div class="col-sm-12 form-group">
                                <label for="chkPrice" class="col-sm-5 control-label">Show price:</label>
                                <div class="col-sm-7">
                                	<input type='checkbox'  id="chkPrice" />
                                </div>
                            </div>
							 <div class="col-sm-12 form-group">
                                <label for="chkRatings" class="col-sm-5 control-label">Rating:</label>
                                <div class="col-sm-7">
                                	<input type='checkbox'  id="chkRatings" />
                                </div>
                            </div>
							<div class="col-sm-12 form-group">
                                <label for="chkAddtocartc" class="col-sm-5 control-label">Add to cart:</label>
                                <div class="col-sm-7">
                                	<input type='checkbox'  id="chkAddtocart" />
                                </div>
                            </div>
							<div class="col-sm-12 form-group">
                                <label for="chkWishlist" class="col-sm-5 control-label">Wish list:</label>
                                <div class="col-sm-7">
                                	<input type='checkbox'  id="chkWishlist" />
                                </div>
                            </div>
							<div class="col-sm-12 form-group">
                                <label for="chkQuickView" class="col-sm-5 control-label">Quick view:</label>
                                <div class="col-sm-7">
                                	<input type='checkbox'  id="chkQuickView" />
                                </div>
                            </div>
							<div class="col-sm-12 form-group">
                                <label for="chkRibbon" class="col-sm-5 control-label">Sale Ribbon:</label>
                                <div class="col-sm-7">
                                	<input type='checkbox'  id="chkRibbon" />
                                </div>
                            </div>
                            </div>
						</form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="cancel" data-dismiss="modal" class="btn btn-primary">Cancel</button>
                    <button id="submit" data-dismiss="modal" class="btn btn-danger">Save</button>
                </div>
            </div>
        </div>
    </div>
</t>
